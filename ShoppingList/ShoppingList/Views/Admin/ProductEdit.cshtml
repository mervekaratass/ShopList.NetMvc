@model ProductEditViewModel
<div class="br-wrapper">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" asp-action="ProductEdit" method="post" enctype="multipart/form-data" autocomplete="off">
                    <div class="form-group">
                        <label for="exampleInputName1" asp-for="ProductName">Ürün Düzenleme Formu</label>
                        <input type="text" class="form-control" asp-for="ProductName" placeholder="@ViewBag.productname" value="@ViewBag.productname">
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleSelectGender">Kategoriler</label>
                        <select class="form-control" asp-for="CategoryName">
                            @foreach (var item in ViewBag.Categories)
                            {
                                <option value="@item" selected="@ViewBag.categoryname">@item</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Ürün Görseli</label>
                        <input type="file" name="Image" asp-for="Image" />
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <br />
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div>
                        @{
                            if (ViewData["AdProductEdit"] != null)
                            {
                                <div class="text-danger"><p class="text-danger">Ürün başarılı bir şekilde düzenlendi.</p></div>

                            }
                            else if (ViewData["NotAdProductEdit"] !=null)
                            {

                                <div class="text-danger"><p class="text-danger">Bu isme sahip bir ürün zaten mevcut.</p></div>
                            }

                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
