@model ProductAddViewModel
<div class="br-wrapper">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" asp-action="ProductAdd" method="post" enctype="multipart/form-data" autocomplete="off">
                    <div class="form-group">
                        <label for="exampleInputName1" asp-for="ProductName">Ürün Ekleme Formu</label>
                        <input type="text" class="form-control" asp-for="ProductName" placeholder="Ürün adı">
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">                        
                            <label for="exampleSelectGender">Kategoriler</label>
                            <select class="form-control" asp-for="CategoryName">
                                @foreach (var item in ViewBag.Categories)
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>               
                    </div>
                    <div class="form-group">
                       <label for="exampleTextarea1">Ürün Görseli</label>
                       <input type="file" name="Image" asp-for="Image"/>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <br />

                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div>
                        @{
                            if (ViewData["ProductAdd"] != null)
                            {
                                <div class="text-danger"><p class="text-danger">Ürün başarılı bir şekilde eklendi.</p></div>

                            }
                            else if (ViewData["NotProductAdd"] != null)
                            {

                                <div class="text-danger"><p class="text-danger">Aynı isimde ürün mevcut.</p></div>
                            }

                        }
                     </div>
                </form>
            </div>
        </div>
    </div>
</div>
