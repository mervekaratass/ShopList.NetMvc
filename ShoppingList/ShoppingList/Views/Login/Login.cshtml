
@{
    Layout = null;
}
@model LoginViewModel
<!DOCTYPE html>
<html lang="en">


@await Html.PartialAsync("~/Views/LayoutPartial/_HeadPartial.cshtml")

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo text-center">
                                <img src="~/LogoImage/logo.png" alt="logo"  >
                            </div>
                            <h4>Merhaba! </h4>
                          
                            <h6 class="font-weight-light">Devam etmek için giriş yapın.</h6>
                            <form class="pt-3" method="post" action="Login">
                                <div class="form-group">
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" asp-for="@Model.Email" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                    <input type="password" class="form-control form-control-lg" asp-for=@Model.Password placeholder="Şifre">
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit" >Giriş Yap</button>
                                </div>
                               
                                <div class="text-center mt-4 font-weight-light">
                                   Bir hesabın yok mu? @*<a href="~/Register/Register/" class="text-primary">Oluştur</a>*@
                                    @Html.ActionLink("Oluştur", "Register", "Register", null, new { @class = "text-primary" })
                                </div>
                                <br />
                                @{
                                    if (ViewData["Login"] != null)
                                    {
                                        <div><p class="text text-danger">Mail veya şifre yanlış.</p></div>
                                    }

                                }
                                <div class="text-danger" asp-validation-summary="ModelOnly">

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/skydash/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/skydash/js/off-canvas.js"></script>
    <script src="~/skydash/js/hoverable-collapse.js"></script>
    <script src="~/skydash/js/template.js"></script>
    <script src="~/skydash/js/settings.js"></script>
    <script src="~/skydash/js/todolist.js"></script>
    <!-- endinject -->
    @section Scripts{
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>
